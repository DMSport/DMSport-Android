<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.example.dmsport_android.dto.response.AllNoticeResponse" />

        <variable
            name="viewModel"
            type="com.example.dmsport_android.viewmodel.NoticeViewModel" />

        <variable
            name="allNoticeList"
            type="com.example.dmsport_android.dto.response.AllNoticeList" />

        <variable
            name="activity"
            type="com.example.dmsport_android.ui.activity.MoreAllNoticeActivity" />

        <variable
            name="adpater"
            type="com.example.dmsport_android.adapter.AllNoticeAdapter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_base">

        <androidx.cardview.widget.CardView
            style="@style/Theme.DMSportAndroid.CardView_notice"
            android:outlineProvider="none"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_notice_title1"
                    style="@style/Theme.DMSportAndroid.TextView_notice_title"
                    android:text="@{allNoticeList.title}"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_notice_list_time"/>

                <TextView
                    android:id="@+id/tv_notice_content1"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/Theme.DMSportAndroid.TextView_notice_content"
                    android:text="@{allNoticeList.content_preview}"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_notice_title1" />

                <TextView
                    android:id="@+id/tv_notice_list_time"
                    style="@style/Theme.DMSportAndroid.TextView_notice_time"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>