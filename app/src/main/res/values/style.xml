<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DMSportAndroid.TextView_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="Theme.DMSportAndroid.TextView_DMSport">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="android:text">@string/login_DMS</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/color_sub</item>
        <item name="android:layout_marginTop">-12dp</item>
    </style>

    <style name="Theme.DMSportAndroid.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/edittext_courner</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">14dp</item>
    </style>

    <style name="Theme.DMSportAndroid.TextView_Des">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_sub</item>
    </style>

    <style name="Theme.DMSportAndroid.Button_Primary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="Theme.DMSportAndroid.Button_White">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_white</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="Theme.DMSportAndroid.TextInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="Theme.DMSportAndroid.Toggle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="Theme.DMSportAndroid.View_Vote">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">190dp</item>
        <item name="background">@color/color_background</item>
    </style>
    
    <style name="Theme.DMSportAndroid.TextView_Hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textColor">@color/color_hint</item>
    </style>

    <style name="Theme.DMSportAndroid.TextView_Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/light</item>
        <item name="android:textColor">@color/color_hint</item>
    </style>

    <style name="Theme.DMSportAndroid.TextView_Vote_event">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="Theme.DMSportAndroid.TextView_List_Vote">
        <item name="android:textColor">@color/color_hint</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/bold</item>
    </style>
    
    <style name="Theme.DMSportAndroid.CardView_Vote_event_badminton">
        <item name="android:layout_width">136dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:background">@drawable/vote_card_view_on</item>
    </style>

    <style name="Theme.DMSportAndroid.CardView_Vote_event">
        <item name="android:layout_width">136dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:background">@drawable/vote_card_view_off</item>
    </style>
    
    <style name="Theme.DMSportAndroid.Button_Vote_event_apply">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:background">@drawable/vote_event_apply</item>
    </style>

    <style name="Theme.DMSportAndroid.View_Main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">170dp</item>
        <item name="android:background">@drawable/background_corner</item>
    </style>

    <style name="Theme.DMSportAndroid.ScrollView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="Theme.DMSportAndroid.CardView_Mypage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

</resources>