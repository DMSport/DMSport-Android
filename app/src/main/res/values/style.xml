<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DMSportAndroid.TextView_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="Theme.DMSportAndroid.TextView_DMSport">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="android:text">@string/login_DMS</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/color_primary2</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Theme.DMSportAndroid.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/edittext_courner</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">14dp</item>
    </style>

    <style name="Theme.DMSportAndroid.TextView_Des">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_primary2</item>
    </style>

    <style name="Theme.DMSportAndroid.Button_Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="Theme.DMSportAndroid.Button_White">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_white</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="Theme.DMSportAndroid.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.DMSportAndroid.ImageView">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="Theme.DMSportAndroid.View_Vote">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">190dp</item>
        <item name="background">@color/color_primary3</item>
    </style>
    
    <style name="Theme.DMSportAndroid.TextView_Vote">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textColor">@color/color_hint1</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="Theme.DMSportAndroid.CardView_Vote_event">
        <item name="android:layout_width">136dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="background">@drawable/vote_card_view_off</item>
    </style>

</resources>